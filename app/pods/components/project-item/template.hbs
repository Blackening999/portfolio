<div class="section ajax-body bg-white">

  <div class="container container-wide">
    <div class="row margin-b-50">
      <div class="col-lg-8 col-lg-offset-1">
        {{{projectData.description}}}
      </div>
    </div>

    <div class="margin-b-80">

      {{#each projectData.items as |item|}}
        <img src="{{item.link}}" class="margin-b-10" alt="">
        <div class="margin-b-20 text-center text-sm text-muted">{{item.description}}</div>
      {{/each}}

    </div>

    <div class="row">
      <div class="col-lg-8 col-lg-offset-1">
        <h1>To build this application I have used next technologies.</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-8 col-lg-offset-1">
        <div class="row margin-b-30">

          {{#each projectData.technologies as |techClass|}}
            <div class="col-md-{{projectData.technologiesIconWidth}}">
              <div class="icon icon-circle icon-grey"><i class="{{techClass}}"></i></div>
            </div>
          {{/each}}

        </div>
      </div>
    </div>
  </div>

  <!-- Close -->
  {{#link-to 'index' class="ajax-close icon icon-hover icon-primary icon-circle icon-sm" data-dismiss="close" tagNam='a'}}<i class="fa fa-close"></i>{{/link-to}}
</div>